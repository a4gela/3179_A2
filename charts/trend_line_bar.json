{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title":"",
    "data": {"url": "https://raw.githubusercontent.com/a4gela/3179_Homework10/main/shark.csv"},
    "encoding": {
        "x":{
            "field":"Incident_year",
            "type":"ordinal",
            "timeUnit":{
                "unit":"year",
                "step":10
            },
            "title":"Year"
        },
        "y":{
            "aggregate":"count",
            "field":"UID",
            "type":"quantitative"
        }
    },
    "layer":[
        {
            "mark":"bar",
            "encoding": {
                "color":{
                    "value":"lightgray"
                }
            }
        },
        {
            "mark":"line",
            "encoding": {
                "color":{
                    "field":"Victim_injury",
                    "type": "nominal",
                    "scale":{
                        "domain":["uninjured","injured","fatal"], 
                        "range":["#003f5c", "#bc5090", "#ffa600"]
                    },
                    "title":"Victim injury"
                }
            }
        }
    ]
}